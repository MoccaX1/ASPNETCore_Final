@model ASPCore_Final.Models.TinTuc

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_frontEnd.cshtml";
}

<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>@Model.TieuDe</h3>
        </div>

        <div class="clear"></div>
    </div>
    <div class="section-group">
        @Html.Raw(Model.NoiDung)
   
    </div>
</div>
<div>
  
    <a asp-action="Index">Trở về</a>
</div>

<div class="single-related-products">
    <div class="container">
        <h3 class="animated wow slideInUp" data-wow-delay=".5s">Tin liên quan</h3>
        <div class="new-collections-grids">
            <div class="new-collections-grid">
                @{
                    ESHOPContext db = new ESHOPContext();
                    var listSP_related = db.TinTuc.Where(p => p.LoaiTt == Model.LoaiTt).Take(4).ToList();
                }

                @foreach (var item in listSP_related)
                {
                    
                <div class="container-fluid">
                    <div class="row align-content-center">
                        <div class="col-sm-3">
                            <img src="~/HangHoa/@item.Hinh" style="width:230px;height:230px;" alt="Alternate Text" />
                        </div>
                        <div class="col-sm-8 align-content-between">
                            <h3><a href="/News/Details/@item.MaTt">@item.TieuDe </a></h3>
                            <h4>Posted on @item.NgayTao </h4>
                            @item.LoaiTt
                        </div>
                    </div>
                </div>
                }
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>
