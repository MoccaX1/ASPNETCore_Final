@model IEnumerable<ASPCore_Final.Models.NhanVien>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}




<div class="outer-w3-agile mt-3">
    <h4 class="tittle-w3-agileits mb-4">Danh sách nhân viên</h4>
    <form action="#" method="post" class="form-inline mx-auto search-form">
        <input class="form-control mr-sm-5" type="search" placeholder="Search" aria-label="Search" required="">
        <button class="btn btn-style my-2 my-sm-0" type="submit">Search</button>
    </form>
    <p>
        <a asp-action="Create" class="btn btn-primary">Tạo mới</a>
    </p>
   


    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.MaNv)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.HoTen)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.MatKhau)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.TrangThaiHd)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.MaPqNavigation)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.MaNv)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.HoTen)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.MatKhau)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.TrangThaiHd)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.MaPqNavigation.MaPq)
                    </td>
                    <td scope="row">
                        <a asp-action="Edit" asp-route-id="@item.MaNv">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.MaNv">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.MaNv">Delete</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>


</div>

