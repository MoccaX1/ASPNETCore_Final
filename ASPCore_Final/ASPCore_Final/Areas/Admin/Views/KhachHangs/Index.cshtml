
@model ReflectionIT.Mvc.Paging.PagingList<ASPCore_Final.Models.KhachHang>
@using ReflectionIT.Mvc.Paging;
@addTagHelper *, ReflectionIT.Mvc.Paging
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Thông tin khách hàng</h2>

<div class="outer-w3-agile mt-3">
    <h4 class="tittle-w3-agileits mb-4">Danh sách khách hàng</h4>
    <form method="get" class="form-inline">
        <input name="searchString" class="form-control" placeholder="Search..."
               value="@Model.RouteValue["searchString"]" />
        <button type="submit" class="btn btn-info">
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Search
        </button>
    </form>
    <p>
        <a asp-action="Create" class="btn btn-primary">Tạo mới</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.TaiKhoan)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.MatKhau)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.HoTen)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.GioiTinh)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.NgaySinh)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.DiaChi)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.DienThoai)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Hinh)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.TrangThaiHd)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.TaiKhoan)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.MatKhau)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.HoTen)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.GioiTinh)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.NgaySinh)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.DiaChi)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.DienThoai)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.Hinh)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.TrangThaiHd)
                    </td>
                    <td scope="row">
                        <a asp-action="Edit" asp-route-id="@item.MaKh">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.MaKh">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.MaKh">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <nav class="navbar-default justify-content-center">


        @await this.Component.InvokeAsync("Pager", new { pagingList = this.Model, @searchString = @ViewBag.SearchString, @class = "page-item" })


    </nav>
</div>
